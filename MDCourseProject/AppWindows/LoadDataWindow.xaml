<Window x:Class="MDCourseProject.AppWindows.LoadDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MDCourseProject.AppWindows"
        mc:Ignorable="d"
        Height="240"
        Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Мои Документы" TextAlignment="Center" FontWeight="Bold" FontSize="24" Margin="0 0 0 24"></TextBlock>
        <Button Height="32" Width="Auto" Margin="0 0 0 8" Padding="16 0 16 0" Click="Button_LoadDefaultData"> Загрузить данные по умолчанию </Button>
        <Button Height="32" Width="Auto" Click="Button_LoadUserData"> Загрузить данные </Button>
    </StackPanel>
</Window>

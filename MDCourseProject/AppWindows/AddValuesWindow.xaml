<Window x:Class="MDCourseProject.AppWindows.AddValuesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MDCourseProject.AppWindows"
        mc:Ignorable="d"
        Title="Добавить значение"
        Height="480" Width="540"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    
        <Grid Margin="0 0 0 4">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="24"/>
            </Grid.RowDefinitions>
            
            <Border BorderThickness="1" BorderBrush="Black" Margin="4" Padding="16 20 16 16">
                <Grid x:Name="AddValuesGrid">
                </Grid>
            </Border>
            
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="4 0 4 0">
                <Button Width="128" Margin="0 0 4 0" Click="Button_AcceptAddValuesWindow">Добавить</Button>
                <Button Width="128" Click="Button_CancelAddValuesWindow">Отмена</Button>
            </StackPanel>
        </Grid>
</Window>

<Window x:Class="MDCourseProject.AppWindows.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MDCourseProject.AppWindows"
        mc:Ignorable="d"
        Title="Отчет" Height="420" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="16"/>
        </Grid.RowDefinitions>
            
        <Border BorderThickness="1"  Margin="4" Padding="16 16 16 16">
            <Grid x:Name="AddValuesGrid">
            </Grid>
        </Border>
            
        <Separator Grid.Row="1" Margin="16 0 16 0" VerticalAlignment="Top"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="16 0 16 0">
            <Button Width="128" Margin="0 0 8 0" >Сделать отчет</Button>
            <Button Width="128" Click="Button_Cancel"> Отмена </Button>
        </StackPanel>
    </Grid>
</Window>
